<h1>Your Application</h1>


<p>
          <strong>Name</strong> 
          <%= @account.firstname%> <%= @account.lastname%>
      </p>
      <p>
          <strong>Date of Birth</strong> 
          <%= @account.DOB%>               <!-- why DOB is orange? -->
      </p>
      <p>
          <strong>Email</strong>
          <%= @account.email%>
      </p>
      <p>
          <strong>Home Phone</strong>
          <%= @account.homephone%>
      </p>
      <p>
          <strong>Cell phone</strong>
          <%= @account.cellphone%>
      </p>
      <p>
          <strong>Home Address</strong><br />
          <strong>Street</strong>
          <%= @account.street%><br />
          <strong>City</strong>
          <%= @account.city %><br />
          <strong>State</strong>
          <%= @account.state %><br />
          <strong>Zip</strong>
          <%= @account.zip %><br />
      </p>

<%= form_for @account do |f| %>

  <%= fields_for :application_form do |af| %>
     <p>
         <strong>
             The Application Created at: 
         </strong>
         <%= @account.application_form.created_at %>
     </p>
     <p>
         <strong>
             Last updated at: 
         </strong>
         <%= @account.application_form.updated_at %>
     </p>
     <p>
         <strong>
             Your interested area: 
         </strong>
         <%= @account.application_form.interested_areas %>
     </p>
     <p>
         <strong>
             Your scheduled time: <br />
         </strong>
             From: <%= @account.application_form.available_time_begin %><br />
             To: <%= @account.application_form.available_time_end %>
     </p>
     <% end %>
     <p>
         <strong>
             Your application status
         </strong>
             (true for approved, false for not yet): 
         
             <%= @account.is_volunteering %><br />
            
     </p>
     
    
    
<% end %>
 <%= link_to 'Withdraw your application', withdraw_application_path, :method=>'delete' %>
<p>
    <strong>If you have any question or want to cancel the application, please contact the administrator, thanks.</strong>
</p>