
%h1
 Animal Center 
=render 'sessions/signin'
%fieldset
 -if @account.errors.any?
  %div{:id=>"error_explanations"}
  =pluralize(@account.errors.count, "error") #count the amount of errors(error)
  has been found!
  %ul
   -@account.errors.full_messages.each do |msg|
    %li
     =msg
 %flash
  =flash[:danger] 
 =form_for @account do |f|
  %div{:style => "margin-bottom:10px"}
   =f.text_field :firstname, {:placeholder => 'Firstname'}
   =f.text_field :middlename, {:placeholder => 'Middlename'}
  %div{:style => "margin-bottom:10px"}
   =f.text_field :maidenname, {:placeholder => 'Maidenname'}
   =f.text_field :lastname,  {:placeholder => 'Lastname'}
  %div{:style => "margin-bottom:10px"}
   =f.text_field :gender, {:placeholder => 'Gender'}
   =f.text_field :DOB, {:placeholder => 'mm-dd-yyyy(DOB)', :id=>'dob',:id => 'datepicker' }
  %div{:style => "margin-bottom:10px"}
   =f.text_field :email, {:placeholder => 'E-mail'}
   =f.text_field :password, {:type=>'password',:placeholder => 'password'}
  %div{:style => "margin-bottom:10px"}
   =f.text_field :homephone, {:placeholder => 'xxx-xxx-xxxx(Homephone)'}
   =f.text_field :cellphone, {:placeholder => 'xxx-xxx-xxxx(Cellphone)'}
  %div{:style => "margin-bottom:10px"}
   =f.text_field :street, {:placeholder => 'Street'}
   =f.text_field :city, {:placeholder => 'City'}
   =f.text_field :state, {:placeholder => 'State'}
   =f.text_field :country, {:placeholder => 'Country'}
  %div{:style => "margin-bottom:10px"}
   =f.text_field :zip, {:placeholder => 'Zip Code'}
  %p
   =f.submit 'Join us now!'